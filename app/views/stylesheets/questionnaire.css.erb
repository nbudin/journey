html, body {
        height: auto;
}

body {
        font-family: sans-serif;
        font-size: 14px;
        border: none;
}

div.submit {
        margin-left: 10em;
        width: 100%;
}

.page {
        margin: 15px;
}

.required {
        font-weight: bold;
}

.editingbox {
        border: #000 solid 1px;
        padding: 5px;
        margin: 10px;
}

.page {
        border: #000 dashed 1px;
        padding: 5px;
        margin: 15px;
}

.pagetitle {
        font-weight: bold;
        font-size: 150%;
        display: inline;
}

.pagecount {
        margin-bottom: 1em;
}

.navbuttons {
        margin-top: 2em;
}

.answerpage {
        padding: 0.25em;
        background-color: #eeeeee;
        height: 100%;
}

.divider {
        height: 1em;
}

.heading, .heading input {
        font-size: 150%;
}

.questionbody input[type=text], .questionbody textarea {
        width: 100% !important;
}

#responseviewer .questionbody input[type=text], #responseviewer .questionbody textarea {
  width: 90%;
}

.questionandcaption {
    display: inline-block;
    width: 95%;
}

.layout-top .questionandcaption {
    vertical-align: middle;
    position: relative;
    outline: none;
}

.layout-left {
    display: table;
    display: inline-block;
    width: 100%;
}

.layout-left .questionandcaption {
    display: table-row;
    -moz-box-orient: horizontal;
    display: inline-block;
}

.layout-left .caption {
    display: table-cell;
    display: inline-block;
    width: 20%;
    /* height: 100%; */
    vertical-align: middle;
    position: relative;
    outline: none;
}

.layout-top .questionbody, .layout-top .caption {
    display: block;
}

.layout-top .questionbody {
    margin-left: 2em;
    margin-top: 0.3em;
}

.layout-left .questionbody {
    display: table-cell;
    display: inline-block;
    width: 75%;
    /* height: 100%; */
    vertical-align: middle;
}

.layout-left .questionbody * {
        position: relative;
        outline: none;
}

.moreoptions {
    position: absolute;
    right: 2px;
    top: 25%;
}

.question {
    width: 100%;
    padding-top: 2px;
    padding-bottom: 2px;
}

.question.layout-top {
    margin-top: 0.5em;
    margin-bottom: 0.5em;
}

.radiospacer {
    display: inline-block;
    width: 1em;
}

.odd {
        background-color: #dddddd;
}

select {
        min-width: 50px;
}

.bigbutton {
    background-image: url(<%= image_path 'topbar-bg.png' %>); 
    background-repeat: repeat-x; border: 2px solid #bad032; 
    border-radius: 10px; 
    -moz-border-radius: 10px; 
    -webkit-border-radius: 10px; 
    padding: 0.5em; 
    display: inline-block;
    color: black; 
    text-decoration: none; 
    font-size: 120%;
	margin: 0.5em;
}

.topbar {
        position: fixed;
        left: 0px;
        top: 0px;
        background-image: url(<%= image_path 'topbar-bg.png' %>);
        border-bottom: 2px solid #bad032;
        padding: 2px;
        width: 100%;
        height: 50px;
        z-index: 100;
		padding: 3px 5px;
        vertical-align: middle;
}

.topbar ul.user_options {
    list-style-type: none;
    padding-right: 0.5em;
	margin: 0;
	margin-top: 0.5em;
    text-align: right;
    float: right;
}

.topbar ul.user_options li {
    display: -moz-inline-stack;
    display: inline-block;
	margin: 0.5em;
}

.topbar ul.user_options li a {
    background-color: #bad032;
    color: black;
    padding: 0.2em 0.5em;
    text-decoration: none;
    border-radius: 5px;
    -moz-border-radius: 5px;
    -webkit-border-radius: 5px;
    outline: none;
    position: relative;
}

.topbar ul.user_options li a:hover {
    background-color: white;
}

a {
        color: #3e4704;
}

.responseheader {
        background-color: black;
        color: white;
        font-weight: bold;
        margin-bottom: 2px;
}

.fieldWithErrors {
  padding: 2px;
  background-color: red;
  display: inline;
}

.infobox {
  font-size: 80%;
  border: 2px black solid;
  background-color: #ddd;
  padding-left: 1em;
}

div.editingbuttons {
  background-color: #ddd;
  padding: 2px;
  margin: 2px;
}

form.purposeselector, form.typeselector {
  display: inline;
  padding-right: 2em;
}

#responseviewer {
  border: 2px black solid;
  width: 100%;
  height: 100%;
}

.response {
  position: relative;
  width: 100%;
  overflow: auto;
}


.response .questionbody p:first-child {
    margin-top: 2px;
    margin-bottom: 2px;
}

.response .caption {
    vertical-align: top;
}

.response table.question {
    border-top: #aaa 1px solid;
    border-bottom: #aaa 1px solid;
}

.response table.question {
    border-collapse: collapse;
}

.response .pageheader {
    margin-bottom: 2px;
    font-size: 105%;
    font-weight: bold;
}

form.inplaceeditor-form {
  display: inline;
}

.questionbody {
  position: relative;
}

.questionbody input.editor_field {
    width: auto;
}

ul#questions {
    list-style-type: none;
    padding-left: 0;
}

li.question span.draghandle {
    display: inline-block;
    cursor: move;   
    vertical-align: middle;
}

.questionnairesummary {
        border: 1px #c1ddff solid;
        background-color: #daebff;
        padding: 0.3em;
        margin-top: 0.5em;
        border-radius: 5px;
        -webkit-border-radius: 5px;
        -moz-border-radius: 5px;
}

.questionnairesummary a, .questionnairesummary a:visited {
    color: #000055;
}

.questionnairesummary h3 {
        margin-top: 0;
}

.button-to, .button-to div {
    display: inline;
}

.preview_notice {
    border: 1px #a00 solid;
    color: #a00;
    border-radius: 5px;
    -moz-border-radius: 5px;
    -webkit-border-radius: 5px;
    padding: 10px;
    margin-bottom: 5px;
    text-align: center;
}